<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="br.edu.ifsc.fln.controller.MarcaDialogController"
          hgap="10" vgap="10" alignment="CENTER">

    <!-- ID da Marca -->
    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Nome da Marca -->
    <Label text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nomeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- BotÃµes -->
    <Button text="Salvar" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#handleSalvar"/>
    <Button text="Cancelar" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#handleCancelar"/>

</GridPane>